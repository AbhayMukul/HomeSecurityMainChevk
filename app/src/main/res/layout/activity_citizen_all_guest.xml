<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Activity.Citizen.CitizenAllGuestActivity">

    <Button
        android:layout_width="match_parent"
        android:text="DATE OF ENTRY"
        android:background="@drawable/circle"
        android:backgroundTint="@color/redMain"
        android:layout_margin="8dp"
        android:layout_height="wrap_content"
        android:id="@+id/Btn_CitizenAllGuest_SearchDate"/>

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/recyclerView_GuestCitizenAll"/>
</LinearLayout>