<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.Admin.AdminFlatActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <EditText
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:id="@+id/Ed_AdminGuardActivity_ID"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="Guard ID" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="180dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Guard Name" />

            <EditText
                android:gravity="center"
                android:id="@+id/Ed_AdminGuardActivity_Name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="180dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Guard Phone" />

            <EditText
                android:gravity="center"
                android:id="@+id/Ed_AdminGuardActivity_Phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="180dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Guard Password" />

            <EditText
                android:gravity="center"
                android:id="@+id/Ed_AdminGuardActivity_Password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true">
        <Button
            android:layout_weight="1"
            android:id="@+id/Btn_AdminGuardActivity_check"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/redMain"
            android:text="CHECK"
            />
        <Button
            android:layout_weight="1"
            android:id="@+id/Btn_AdminGuardActivity_commit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#000000"
            android:text="COMMIT"
            android:textColor="@color/whiteMain"
            />

        <Button
            android:layout_weight="1"
            android:id="@+id/Btn_AdminGuardActivity_GuardMain"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/redMain"
            android:text="GUARD"
            />
    </LinearLayout>

</RelativeLayout>